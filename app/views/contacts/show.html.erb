<div class="jumbotron">
  <h1 class="display-4"><%= @contact.first_name %> <%= @contact.last_name %></h1>
  <p class="lead"><%= @contact.email %> | <%= @contact.phone %> | <%= @contact.twitter %> </p>
  <hr class="my-4">

  <div class="d-flex justify-content-between">
    <div>
      <%= link_to "Back", contacts_path, class: "btn btn-dark" %>
      <%= link_to "Edit", edit_contact_path(@contact), class: "btn btn-secondary" %>
    </div>
  <%= button_to "Delete", @contact, method: :delete, class:"btn btn-danger" %>
  </div>
</div>