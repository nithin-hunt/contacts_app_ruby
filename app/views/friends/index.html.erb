<h1>Friend List</h1>

<table class="table table-striped table-hover table-bordered">
  <thead class="thead-dark">
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Twitter</th>
      <th></th>
    </tr>
  </thead>  
  <tbody>
    <div id="friends">
      <% @friends.each do |friend| %>
        <tr>
          <%= render friend %>  
          <td>
            <%= link_to "Show", friend %>
          </td>
        </tr>
      <% end %>
    </div>
  </tbody>
</table> 

<%= link_to "New friend", new_friend_path, class:"btn btn-secondary" %>
